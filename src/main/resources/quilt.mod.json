{
    "schema_version": 1,

    "quilt_loader": {
        "group": "${mod_group}",
        "id": "${mod_id}",
        "version": "${mod_version}",

        "intermediate_mappings": "net.fabricmc:intermediary",

        "metadata": {
            "name": "${mod_name}",
            "description": "${mod_desc}",
            "contributors": {
                "Zombii": "Owner",
                "nanobass": "Developer",
                "coolGi": "Developer",
                "StartsMercury": "Developer"
            },

            "contact": {
                "issues": "https://github.com/CRModders/FluxAPI/issues",
                "sources": "https://github.com/CRModders/FluxAPI"
            },

            "license": "MIT",

            "icon": "assets/flux-api/icon.png"
        },

        "entrypoints": {
            "client_init": "dev.crmodders.flux.impl.input.client.FluxApiInputClientEntrypoint"
        },

        "depends": [
            {
                "id": "cosmicquilt",
                "versions": "*"
            },
            {
                "id": "cosmicreach",
                "versions": ">=${cosmic_reach_version}"
            }
        ]
    },

    "accessWidener": "flux-api.accesswidener",
    "mixin": "flux-api.mixins.json"
}
